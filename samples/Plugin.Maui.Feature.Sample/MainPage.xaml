<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:camera="clr-namespace:Plugin.Maui.Camera;assembly=Plugin.Maui.Camera"
             x:Class="Plugin.Maui.Camera.Sample.MainPage"
             Title="Camera Plugin">

    <ScrollView>
        <VerticalStackLayout>
            <camera:CameraView x:Name="CameraPreview" />
            <Button Text="Flip camera" Clicked="Button_Clicked" />
            <Button Text="ChangeFlash" Clicked="ChangeFlash" />
            <Button Text="Take Picture" Clicked="TakePicture" />
            <Image x:Name="DisplayImage" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
